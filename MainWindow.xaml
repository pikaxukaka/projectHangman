<Window x:Class="projektWisielec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projektWisielec"
        mc:Ignorable="d"
        Title="Wisielec" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="WordTextBlock" Grid.Row="0" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="10"/>
        <Button x:Name="GuessButton" Grid.Row="1" Margin="150, 100, 150, 50" Content="Check" Click="GuessButton_Click"/>
        <TextBlock x:Name="ResultTextBlock" Grid.Row="2" FontSize="25" Margin="10"  HorizontalAlignment="Center"/>
    </Grid>
</Window>
